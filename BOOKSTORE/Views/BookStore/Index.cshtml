@using BOOKSTORE.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SACH>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row featured__filter">

    @foreach (var sach in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
            <div class="featured__item">
                <div class="featured__item__pic set-bg" data-setbg="img/featured/feature-1.jpg">
                    <ul class="featured__item__pic__hover">
                        <a href="@Url.Action("Details", "BookStore", new { id = sach.Masach})">
                            <img alt="@sach.Tensach" src="~/img/product/Product1/@sach.Anhbia" />
                        </a>
                    </ul>
                </div>
                <div class="featured__item__text">
                    <h3><a href="product-details.html">@sach.Tensach</h3>
                    <div class="product-price">
                        <span>@sach.Giaban VNĐ</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@* Tạo liên kết các trang *@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="Menutrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .Menutrang {
        display: flex;
        justify-content: center;
    }

        .Menutrang li {
            display: inline;
            border: 1px solid;
            padding: 5px 15px;
            border-radius: 5px;
            margin: 2px;
        }

            .Menutrang li.active {
                background-color: #64a5de;
                color: white;
                border: 1px solid #64a5de;
            }
</style>









