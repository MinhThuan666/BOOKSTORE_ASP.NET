@model IEnumerable<BOOKSTORE.Models.SACH>
@{
    ViewBag.Title = "SPTheoNXB";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h3 style="text-align:center;color:red"> Sách Theo Nhà Xuất Bản</h3>
<div class="row featured__filter">

    @foreach (var sach in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
            <div class="featured__item">
                <div class="featured__item__pic set-bg" data-setbg="img/featured/feature-1.jpg">
                    <ul class="featured__item__pic__hover">
                        <a href="@Url.Action("Details", "BookStore", new { id = sach.Masach})">
                            <img alt="@sach.Tensach" src="~/img/product/Product1/@sach.Anhbia" />
                        </a>
                    </ul>
                </div>
                <div class="featured__item__text">
                    <h3><a href="product-details.html">@sach.Tensach</h3>
                    <div class="product-price">
                        <span>@sach.Giaban VNĐ</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

